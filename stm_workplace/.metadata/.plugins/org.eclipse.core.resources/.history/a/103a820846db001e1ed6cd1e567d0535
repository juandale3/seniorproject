#ifndef INC_STEPPERMOTOR_H_
#define INC_STEPPERMOTOR_H_



#endif /* INC_STEPPERMOTOR_H_ */


// defines
#define MAX_STEP 1500

uint16_t currPos = 0;
uint16_t steps = 0;;
uint8_t direction = 0;

// Pins
// Steps
GPIO_TypeDef * pulGroup = GPIOA;
uint16_t pulPin = GPIO_PIN_1;

//Direction
GPIO_TypeDef * dirGroup = GPIOA;
uint16_t dirPin = GPIO_PIN_2;

//void stepperClose();
//void stepperOpen();
//void stepperAngle(uint8_t angle);

void stepperClose(){
	steps = MAX_STEP;
}

void stepperOpen(){
	steps = 0;
}

void stepperStep(uint16_t step){
	if(step > MAX_STEP){
		steps = MAX_STEP;
	}else{
	steps = step;
	}
}
