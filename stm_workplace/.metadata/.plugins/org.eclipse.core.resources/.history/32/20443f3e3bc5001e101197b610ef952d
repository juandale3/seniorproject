/*
 * state_machine.c
 *
 *  Created on: Feb 3, 2024
 *      Author: Manny Mort Jr
 */
#include <stdio.h>
#include <main.h>
#include <stdbool.h>

char msg[500];

enum State {
	START,
	VAC_ACHIEVMENT_TEST,
	WARM_UP,
	LOAD_TEST,
	OPERATION_TEST,
	ULTIMATE_MEASURE_TEST,
	IDLE,
	FAIL_STATE,
	STOP


} eNextState;

enum State eNextState = START;
void state_machine() {
	bool error = false;
	switch(eNextState) {
		case START:

			sprintf(msg, "START State");
			printMsg(&haurt3);

			if(!error) {
				eNextState = FAIL_STATE;
			}
			break;
			eNextState = VAC_ACHIEVMENT_TEST;
		case VAC_ACHIEVMENT_TEST:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			eNextState = WARM_UP;
			break;
		case WARM_UP:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			eNextState = LOAD_TEST;
			break;
		case LOAD_TEST:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			eNextState = OPERATION_TEST;
			break;
		case OPERATION_TEST:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			eNextState = ULTIMATE_MEASURE_TEST;
			break;
		case ULTIMATE_MEASURE_TEST:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			eNextState = FAIL_STATE;
			break;
		case FAIL_STATE:

			if(!error) {
				eNextState = FAIL_STATE;
			}
			break;
		case IDLE:
			break;
		case STOP:
			break;

	}
}
